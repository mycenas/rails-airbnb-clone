<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4">
        <h1 class="mb-4"><%= @user.username.capitalize %>'s Profile</h1>
          <p><strong>Level:</strong> <%= @user.level %></p>
          <p><strong>Abilities:</strong> <%= @user.abilities %></p>
          <p><strong>Class:</strong> <%= @user.character_class %></p>
          <p><strong>Stats:</strong></p>
          <ul>
            <% @user.stats.each do |attribute, value| %>
              <li><strong><%= attribute.capitalize %>:</strong> <%= value %></li>
            <% end %>
          </ul>
      </div>
    </div>
  </div>
</div>
