<%# as a user i want to view a specific quest %>

<div class="top-container">
<div class="container-md"><br>

  <center><h1><%= @quest.name %></h1><br>
  <div class="show-image">
  <img src="<%= asset_path('card-placeholder.png') %>" class="card-img-top show-image"  alt="...">
  </div></center>

    <div class="description">
    <p><%= @quest.description %></p>


    <div>
    <strong>Class Requirement</strong>
    <p><%= @quest.requirement %>
    <br>

    <div>
    <strong>Location</strong>
    <p><%= @quest.location %>
    </div>

    <div>
    <strong>Reward</strong>
    <p><%= @quest.reward %> coins <%= display_coins(@quest.reward) %> <p>
    </div>

    <div>
    <strong>Quest Master</strong>
    <p><%= @quest.user.username.capitalize %>
    </div>

<center><%= link_to "Return to Quest List", quests_path, class: "btn-purple" %></center>
</div>
</div>
</div>
<br>
