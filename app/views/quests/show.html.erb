<%# as a user i want to view a specific quest %>

<h1><%= @quest.name %></h1>

<div>
      <h3><%= @quest.description %>
</div>

<div>
    <h2>Class Requirement</h2>
      <h3><%= @quest.requirement %>
</div>

<div>
    <h2>Location</h2>
      <h3><%= @quest.location %>
</div>

<div>
    <h2>Reward</h2>
      <h3><%= @quest.reward %> coins</h3>
</div>

<div>
    <h2>Dungeon Master</h2>
      <h3><%= @quest.user.username.capitalize %>
</div>

<%= link_to "Return to Quest List", quests_path, class: "btn btn-primary" %>
