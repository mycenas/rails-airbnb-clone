<div class="bookings-banner">
  <h1>Post a Quest</h1>
  <p class='banner-text'>Seeking heroes for a noble quest, come forth and put your skills to the test..</p>
  <div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    </div>
  </div>
  </div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-4">
      <%= image_tag 'new-quest.png', alt: 'Quest Scroll', class: 'new-quest', style: 'width: 100px; height: 100px;' %>
        <p>Quest Master <strong><%= current_user.username.capitalize%></strong>, please enter the details of your quest!</p>

        <%= form_for @quest do |f| %>

          <div class="form-group">
            <%= f.label :name, "Quest Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :description, "Quest Description" %>
            <%= f.text_area :description, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :requirement, "Class Requirement" %>
            <%= f.text_area :requirement, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :location, "Quest Location" %>
            <%= f.text_field :location, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :reward %>
            <%= f.number_field :reward, class: "form-control" %>
          </div>

          <%= f.submit "Create Quest", class: "btn-purple" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
