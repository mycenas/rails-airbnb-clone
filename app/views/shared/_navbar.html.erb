<div class="navbar navbar-expand-sm navbar-light">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent", style="">
    <ul class="navbar-nav">
      <li class="nav-item">
          <%= link_to image_tag('logo.png', alt: 'Logo', class: 'navbar-logo'), root_path, class: 'nav-link' %>
        </li>
      <% if user_signed_in? %>
          <%= link_to 'Quest Board', quests_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <% if current_user.role == 'dm' %>
            <%= link_to 'Enlistments', user_requests_path, class: "nav-link" %>
          <% else %>
            <%= link_to 'Quest Log', my_bookings_path, class: "nav-link" %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to 'Profile', profile_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign In', new_user_session_path, class: "nav-link" %>
        </li>    
      <% end %>
    </ul>
    <ul class="navbar-nav ms-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <span class="welcome-text">Welcome, <%= current_user.username.capitalize %>!</span>
        </li>
        <li class="nav-item">
          &nbsp;
        </li>
        <li class="nav-item">
          <span class="welcome-text">You have <%= current_user.purse %>&nbsp;<%= image_tag 'coin.png', alt: 'Coin', cwidth: '25px', height: '25px' %>&nbsp;</span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
